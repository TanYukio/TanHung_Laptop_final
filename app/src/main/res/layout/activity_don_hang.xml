<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.DonHang_Activity">
    <LinearLayout
        android:id="@+id/layoutdoanhthu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#CF7BDD">

        <ImageButton
            android:id="@+id/ibtnExit_lichsu"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/title_qlhd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="18dp"
            android:gravity="center|left"
            android:text="Lịch sử mua hàng"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <Spinner
            android:layout_gravity="center"
            android:id="@+id/spnAddTheloai_TK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview_danhsachhoadon_lichsu"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="60dp"
            android:background="#FFFFFF" />
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tongchi"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Tổng chi :"/>
            <TextView
                android:id="@+id/tongtien_HD"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text=""/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/thongbaolichsu"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""></TextView>
</FrameLayout>